<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search History</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="history-container">
        <div class="history-stats">
            <h1>ğŸ“‹ Search History</h1>
            <h2><%= totalSearches %> total searches</h2>
            <p><%= cities.length %> different cities</p>
        </div>
        
        <% if (cities.length === 0) { %>
            <div class="empty-history">
                <div class="empty-icon">ğŸ˜´ğŸ˜´ğŸ˜´</div>
                <div class="empty-message">
                    <h2>Empty History</h2>
                    <p>Search for a city and come back to check!</p>
                </div>
                <a href="/" class="btn-primary">Search Your First City</a>
            </div>
        <% } else { %>
            <div class="list">
                <% cities.forEach(city => { %>
                <div class="city-item">
                    <div class="city-info">
                        <h3 class="city-name"><%= city.name %></h3>
                        <p class="city-stats">Last searched: <%= new Date(city.lastSearched).toLocaleDateString() %></p>
                    </div>
                    <div class="count">
                        <%= city.count %> time<%= city.count > 1 ? 's' : '' %>
                    </div>
                </div>
                <% }) %>
            </div>
            
            
            <div class="home-btn">
                <a href="/" class="btn-primary">â† Back to Search</a>
                <button onclick="deleteHistory()" class="btn-delete">ğŸ—‘ï¸ Delete All History</button>
    
            </div>
        <% } %>
    </div>
    
    <script>
        function deleteHistory() {
            if (confirm('Delete ALL search history? This cannot be undone.')) {
                fetch('/delete-all', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('âœ… SUCCESS: ' + data.message);
                        window.location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error deleting history');
                });
            }
        }
    </script>
</body>
</html>